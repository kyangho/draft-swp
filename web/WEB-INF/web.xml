<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>controller.HomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingListController</servlet-name>
        <servlet-class>controller.SettingListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingDetailsController</servlet-name>
        <servlet-class>controller.director.SettingDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeDirectorController</servlet-name>
        <servlet-class>controller.director.HomeDirectorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSettingController</servlet-name>
        <servlet-class>controller.director.AddSettingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingListController</servlet-name>
        <url-pattern>/director/role/settinglist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingDetailsController</servlet-name>
        <url-pattern>/director/setting/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeDirectorController</servlet-name>
        <url-pattern>/director</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSettingController</servlet-name>
        <url-pattern>/director/setting/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.auth.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>view/home/homepage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
